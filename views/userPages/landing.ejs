<%-include('../partials/user/header-landing.ejs')%>
  <style>
    .hero-section {
      margin-top: 40px;
    }

    .hero-img {
      width: 100%;
      height: 450px;
      object-fit: cover;
      border-radius: 10px;
    }

    .hero-text h1 {
      font-size: 3rem;
      font-weight: bold;
    }

    .hero-text h1 span {
      color: red;
    }

    .hero-text p {
      letter-spacing: 2px;
      font-weight: 500;
    }

    .btn-shop {
      background-color: red;
      color: white;
      border-radius: 5px;
      padding: 10px 20px;
      font-weight: 600;
      transition: 0.3s;
    }

    .btn-shop:hover {
      background-color: darkred;
    }

    .collection-card img,
    .product-card img {
      width: 100%;
      object-fit: cover;
      border-radius: 10px;
      transition: transform 0.3s ease-in-out;
    }

    .collection-card img:hover,
    .product-card img:hover {
      transform: scale(1.05);
    }

    .collection-title,
    .product-name {
      margin-top: 15px;
      font-weight: 600;
      text-transform: uppercase;
    }

    /* Specific for product images */
    .product-card img {
      height: 300px;
    }

    .product-price {
      font-weight: 500;
      color: #333;
    }

    .section-title {
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .underline {
      width: 60px;
      height: 2px;
      background: black;
      margin: 10px auto;
    }
  </style>
  <main class="flex-grow-1 bg-light">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-12 mb-5 pt-3 pb-5">
          <div class="container hero-section">
            <div class="row align-items-center">
              <!-- Left Image -->
              <div class="col-md-4 mb-4 mb-md-0">
                <img src="/images/hero-1.avif" alt="Left Banner" class="hero-img" />
              </div>

              <!-- Center Text -->
              <div class="col-md-4 text-center hero-text d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-5 fw-bold mb-3" style="font-family: 'Playfair Display', serif; color: #4d3903">
                  The Essence of Elegance
                </h1>
                <p class="lead mb-4" style="color: #2e2201; max-width: 320px">
                  Discover fragrances that whisper luxury and linger with unforgettable
                  charm. A scent crafted not just to wear, but to define your presence.
                </p>
                <a href="/shop" style="background-color: rgb(237, 185, 51)" class="btn btn-lg rounded-pill px-4 shadow">
                  Shop Now
                </a>
              </div>
              <!-- Right Image -->
              <div class="col-md-4 mt-4 mt-md-0">
                <img src="/images/hero-2.avif" alt="Right Banner" class="hero-img" />
              </div>
            </div>
          </div>
        </div>

        <!-- categories -->
        <div class="col-md-12 mt-5">
          <h6 class="text-uppercase">Explore</h6>
          <h2 class="fw-bold">Our Fragrance Collections</h2>

          <div class="row mt-4 g-4">
            <% categories.forEach(category=> { %>
              <div class="col-md-4 col-sm-6">
                <a href="/shop?category=<%=category._id%>" class="text-decoration-none text-black">
                  <div class="collection-card overflow-hidden rounded-5">
                    <img src="<%=category.img%>" alt="<%=category.name%>" class="img-fluid rounded-5" />
                    <div class="collection-title">
                      <h3 class="mt-4">
                        <%=category.name%>
                      </h3>
                    </div>
                  </div>
                </a>
              </div>
              <% }) %>
          </div>
        </div>
        <div class="col-md-12 mt-5">
          <div class="container text-center mt-5">
            <h6 class="text-uppercase">Explore</h6>
            <h2 class="section-title">Featured Products</h2>
            <div class="underline"></div>

            <div class="row mt-4 g-4">
              <% products.forEach(product=> { %>
                <a href="products/<%=product._id%>" class="col-md-4 text-decoration-none text-black col-sm-6">
                  <div class="product-card">
                    <img src="<%=product.images[0]%>" alt="<%=product.name%>" class="img-fluid rounded-5" />
                    <div class="product-name mt-4 fs-4">
                      <%=product.name%>
                    </div>
                    <div class="product-price">Rs.<%=Math.min(...product.variants.map(v=>v.discount-1))%>.99</div>
                  </div>
                </a>
                <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('../partials/user/footer.ejs')%>