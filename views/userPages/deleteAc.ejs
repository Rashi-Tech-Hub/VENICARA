  }

  .btn-delete:hover {
    background: #a21616;
  }

  .btn-cancel {
    border-radius: 8px;
    font-weight: 600;
    background: #f0f0f0;
    border: none;
    padding: 12px 0;
    width: 100%;
    margin-top: 10px;
    transition: all 0.3s ease;
  }

  .btn-cancel:hover {
    background: #e0e0e0;
  }
  @media (max-width:576px){
  .deletion-card {
    width: 95%;
    max-height: 70vh;
  }
  }
</style>

